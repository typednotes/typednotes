# Copy this file to terraform.tfvars and fill in your values
# Do NOT commit terraform.tfvars to version control

# Scaleway IAM Application (service account) credentials
# These are used for both API access and database authentication
scw_application_id         = "your-application-id"
scw_application_access_key = "your-application-access-key"
scw_application_secret_key = "your-application-secret-key"

# Scaleway organization and project
scw_organization_id = "your-organization-id"
scw_project_id      = "your-project-id"

# Optional overrides
# scw_region  = "fr-par"
# scw_zone    = "fr-par-1"
# environment = "dev"

# Serverless SQL Database configuration
# sdb_min_cpu = 0   # 0 = scale to zero when idle
# sdb_max_cpu = 4   # Maximum CPU units (1-15)
